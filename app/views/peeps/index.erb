<h1>Welcome to Chitter!</h1>
<form action="/signup" method="post"><input type="submit" value="Log In"><input type="submit" value="Sign Up"></form>


<br>
<form action="/peeps" method="post">
  <label for="peep">Please enter new peep</label>
  <input type="text" value="New Peep" name="peep">
  <input type="submit" value="Submit">
</form>
<br>

<ul id="peeps">
  <% @peeps.each do |peep| %>
    <li class="peep" id="peep-<%= peep.id %>">
      <%= peep.message %>
      <br> <%= peep.created_at %>
    </li>
  <% end %>
</ul>